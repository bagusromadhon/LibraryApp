<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.ChoiceBox?>
<VBox alignment="CENTER" spacing="10.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="org.example.libraryapp.Controller.AdminDashboardController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label text="Admin Menu"/>
    <Label text="Add Student "/>
    <Label text="Name"/>
    <TextField fx:id="nameField" promptText="Enter name"/>

    <Label text="NIM"/>
    <TextField fx:id="nimField" promptText="Enter NIM"/>

    <Label text="Fakultas"/>
    <TextField fx:id="fakultasField" promptText="Enter fakultas"/>

    <Label text="Program Studi"/>
    <TextField fx:id="programStudiField" promptText="Enter program studi"/>

    <Button text="Submit" onAction="#handleSubmitButtonAction"/>

    <Label text="Add Book"/>


    <!-- Form fields for book input -->
    <Label text="Book ID"/>
    <TextField fx:id="bookIdField" promptText="Enter Book ID"/>

    <Label text="Title"/>
    <TextField fx:id="titleField" promptText="Enter Title"/>

    <Label text="Author"/>
    <TextField fx:id="authorField" promptText="Enter Author"/>

    <Label text="Category"/>
    <ChoiceBox fx:id="categoryChoiceBox"/>

    <Label text="Stock"/>
    <TextField fx:id="stockField" promptText="Enter Stock"/>

    <Label text="Duration (days)"/>
    <TextField fx:id="durationField" promptText="Enter Duration"/>

    <Label text="Borrower NIM"/>
    <TextField fx:id="borrowerNIMField" text="Tidak Ada" promptText="Enter Borrower NIM"/>

    <Button text="Logout" onAction="#handleLogoutButtonAction"/>
    <Button text="Submit" onAction="#handleBookSubmitButtonAction"/>

    <!-- Table to display books -->
    <TableView fx:id="bookTable" prefHeight="200" prefWidth="600">
        <columns>
            <TableColumn fx:id="bookIdColumn" text="Book ID" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="bookId"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="titleColumn" text="Title" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="title"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="authorColumn" text="Author" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="author"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="categoryColumn" text="Category" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="category"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="stockColumn" text="Stock" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="stock"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="durationColumn" text="Duration (days)" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="duration"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="borrowerNIMColumn" text="Borrower NIM" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="borrowerNIM"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>

    <TableView fx:id="studentTable" prefHeight="200" prefWidth="400">
        <columns>
            <TableColumn fx:id="nameColumn" text="Name" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="name"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="nimColumn" text="NIM" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="nim"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="fakultasColumn" text="Fakultas" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="fakultas"/>
                </cellValueFactory>
            </TableColumn>
            <TableColumn fx:id="programStudiColumn" text="Program Studi" prefWidth="100">
                <cellValueFactory>
                    <PropertyValueFactory property="programStudi"/>
                </cellValueFactory>
            </TableColumn>
        </columns>
    </TableView>
</VBox>
